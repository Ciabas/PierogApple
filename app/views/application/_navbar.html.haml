%nav.navbar.navbar-default.navbar-fixed-top{:role => "navigation"}
  .container
    .navbar-header
      %button.navbar-toggle{"data-target" => "#bs-example-navbar-collapse-1", "data-toggle" => "collapse", :type => "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to 'ApplePieróg', root_path, class: "navbar-brand"
    #bs-example-navbar-collapse-1.collapse.navbar-collapse
      %ul.nav.navbar-nav.navbar-right
        %li
          = link_to cart_path do
            = icon 'shopping-cart'
            Koszyk
            %span{ :style => "color: green" }
              = "(#{get_count_items.to_s} produktów, #{number_to_currency(session[:cart_count]['items_value'], format: '%n%u', unit: 'zł')})"
        - if user_signed_in?
          %li.dropdown 
            %a.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :href => "#", :role => "button"}
              = current_user.email
              %span.caret
            %ul.dropdown-menu
              %li
                - if current_user.profile
                  = link_to ( profile_path(current_user) ) do
                    = icon 'user'
                    Zobacz swój profil
                - else
                  = link_to ( new_profile_path ) do
                    = icon 'user'
                    Uzupełnij swój profil!
              %li
                = link_to (edit_user_registration_path) do
                  = icon 'wrench'
                  Edytuj swoje konto
              %li
                = link_to( destroy_user_session_path, method: :delete, data: { confirm: 'Jesteś pewien?' } ) do
                  = icon 'log-out'
                  Wyloguj się
        - else
          %li
            = link_to( new_user_session_path ) do
              = icon 'log-in'
              Zaloguj się
          %li
            = link_to( new_user_registration_path ) do
              = icon 'pencil'
              Załóż konto
