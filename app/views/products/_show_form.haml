.row
  .col-md-10.col-md-offset-1.text-center
    %h1=  @product.name
    %hr/
.row
  .col-md-7
    #myCarousel.carousel.slide{"data-ride" => "carousel"}
      / Indicators
      %ol.carousel-indicators
        -(@product.product_images).each do |index|
          -if index == @product.product_images.first
            %li.active{"data-slide-to" => index, "data-target" => "#myCarousel"}
          -else 
            %li{"data-slide-to" => index, "data-target" => "#myCarousel"}
      / Wrapper for slides
      .carousel-inner{:role => "listbox"}
        -(@product.product_images).each do |image|
          -if image == @product.product_images.first
            .item.active
              =link_to (image_tag image.photo.url), image.photo.url
          -else
            .item
              =link_to (image_tag image.photo.url), image.photo.url
      / Left and right controls
      %a.left.carousel-control{"data-slide" => "prev", :href => "#myCarousel", :role => "button"}
        %span.glyphicon.glyphicon-chevron-left{"aria-hidden" => "true"}
        %span.sr-only Previous
      %a.right.carousel-control{"data-slide" => "next", :href => "#myCarousel", :role => "button"}
        %span.glyphicon.glyphicon-chevron-right{"aria-hidden" => "true"}
        %span.sr-only Next
  .col-md-5.text-center.status
    %p
      %h2 Cena:
      =@product.price
      zł
    %p
      %h2 Kategoria:
      =@product.category.name
    %p
      %h2 Typ:
      =@product.gear.parent.name
    %p
      %h2 Model:
      =@product.gear.name 
    %p
      %h2 Opis:
      =@product.description
    %p
      %h2 Status:
      =@product.status
    -if @product.status == 'dostepny'
      = form_tag :additem, method: "post" do
        = label_tag :quantity, "Ilość sztuk:"
        = number_field_tag :quantity, 1, min:1, max:99, class: 'item-number-field'
        = hidden_field_tag :product_id, @product.id
        = submit_tag "Dodaj"
