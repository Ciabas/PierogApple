.container 
  .row
    .col-md-4.col-md-offset-4
      %h1=  @product.name
  .row
    .col-md-7
      #myCarousel.carousel.slide{"data-ride" => "carousel"}
        / Indicators
        %ol.carousel-indicators
          -(@product.product_images).each do |index|
            -if index == @product.product_images.first
              %li.active{"data-slide-to" => index, "data-target" => "#myCarousel"}
            -else 
              %li{"data-slide-to" => index, "data-target" => "#myCarousel"}
        / Wrapper for slides
        .carousel-inner{:role => "listbox"}
          -(@product.product_images).each do |image|
            -if image == @product.product_images.first
              .item.active
                =link_to (image_tag image.photo.url), image.photo.url
            -else
              .item
                =link_to (image_tag image.photo.url), image.photo.url
        / Left and right controls
        %a.left.carousel-control{"data-slide" => "prev", :href => "#myCarousel", :role => "button"}
          %span.glyphicon.glyphicon-chevron-left{"aria-hidden" => "true"}
          %span.sr-only Previous
        %a.right.carousel-control{"data-slide" => "next", :href => "#myCarousel", :role => "button"}
          %span.glyphicon.glyphicon-chevron-right{"aria-hidden" => "true"}
          %span.sr-only Next
    .col-md-offset-4
      %p
        Cena:
        =@product.price
      %p
        Kategoria:
        =@product.category.name
      %p
        Typ:
        =@product.gear.parent.name
      %p
        Model:
        =@product.gear.name 
      %p
        Opis:
        =@product.description
      
      = form_tag :additem, method: "post" do
        = label_tag :quantity, "Ilość sztuk:"
        = number_field_tag :quantity, 1, min:1, max:99, class: 'item-number-field'
        = hidden_field_tag :product_id, @product.id
        = submit_tag "Dodaj"
  %br/
  %hr/
  .row
    .col-sm-10.col-sm-offset-1
      %h2.text-center
        Podobne produkty:
      %br/
      - @similar.each do |p|
        -unless p == @product
          .col-xs-6.col-md-2.text-center
            %a.thumbnail{:href => product_path(p.id), title: "#{p.gear.parent.name.capitalize} - model: #{p.gear.name}", 'data-placement' => 'bottom', 'data-toggle' => 'tooltip'}
              =image_tag p.product_images.first.photo(:thumb)
              .caption
                =p.name.truncate(28)
                %br/
                %b=number_to_currency(p.price, format: '%n%u', unit: 'zł')