.container 
  =render 'products/show_form'
  %br/
  %hr/
  .row
    .col-sm-10.col-sm-offset-1
      %h2.text-center
        Podobne produkty:
      %br/
      - @similar.each do |p|
        -unless p == @product
          .col-xs-6.col-md-2.text-center
            %a.thumbnail{:href => product_path(p.id), title: "#{p.gear.parent.name.capitalize} - model: #{p.gear.name}", 'data-placement' => 'bottom', 'data-toggle' => 'tooltip'}
              =image_tag p.product_images.first.photo(:thumb)
              .caption
                =p.name.truncate(28)
                %br/
                %b=number_to_currency(p.price, format: '%n%u', unit: 'z≈Ç')
                