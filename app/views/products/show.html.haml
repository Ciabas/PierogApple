.container
  .row
    .col-md-4.col-md-offset-4
      %h1=  @product.name
  .row
    .col-md-5
      -(@product.product_images).each do |image|
        =link_to (image_tag image.photo.url(:medium), class: "thumbnail"), image.photo.url
    .col-md-offset-6
      %p
        Cena:
        =@product.price
      %p
        Kategoria:
        =@product.category.name
      %p
        Typ:
        =@product.gear.parent.name
      %p
        Model:
        =@product.gear.name 
      %p
        Opis:
        =@product.description
      
      = form_tag "/cart/additem", method: "post" do
        = label_tag :quantity, "Ilość sztuk:"
        = number_field_tag :quantity, 1, min:1, max:99, style: "width:45px;"
        = hidden_field_tag :product_id, @product.id
        = submit_tag "Dodaj"


