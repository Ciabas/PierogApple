.container  
  .col-md-6.col-md-offset-3
    %h2 Zapomniałeś hasła?
    = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
      = devise_error_messages!
      .form-group
        = f.label :email, 'Adres email', class: 'control-label'
        = f.email_field :email, autofocus: true, class: 'form-control'
      .actions= f.submit 'Wyślij mi instrukcje zmiany hasła', class: 'btn btn-default btn-primary'
    %hr= render 'devise/shared/links'
