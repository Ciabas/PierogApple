.row
  .col-sm-1
  .col-sm-6
    %h2 Zdjęcia na Twojej stronie głównej:
  .col-sm-5
#example2_wrapper.dataTables_wrapper.form-inline.dt-bootstrap
  .row
    .col-sm-1
    .col-sm-2
      %a.btn.btn-primary.btn-block{:type => "button", :href => new_admin_slider_image_path } Dodaj zdjęcie
  %br/
  .row
    .col-sm-1
    .col-sm-10
      %table#example2.table.table-bordered.table-hover.dataTable{"aria-describedby" => "example2_info", :role => "grid"}
        %thead
          %tr{:role => "row"}
            %th{:width => "50px;"}
            %th.sorting_asc{"aria-controls" => "example2", "aria-label" => "Rendering engine: activate to sort column descending", "aria-sort" => "ascending", :colspan => "1", :rowspan => "1", :tabindex => "0"} Tytuł
            %th.sorting{"aria-controls" => "example2", "aria-label" => "CSS grade: activate to sort column ascending", :colspan => "1", :rowspan => "1", :tabindex => "0"} Akcje
        %tbody
          - @sliders.each do |slider|
            %tr.odd{:role => "row"}
              %td= image_tag slider.photo(:miniature)
              %td.sorting_1 
                -unless slider.title==''
                  = slider.title
                -else
                  Zdjęcie bez tytułu
              %td
                = button_to "Usuń", { action: "destroy", id: slider.id }, method: :delete, data: { confirm: "Na pewno?" }, class: 'btn btn-primary' 
        %tfoot
