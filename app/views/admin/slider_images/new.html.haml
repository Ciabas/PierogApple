.container
  .row
    .col-md-6.col-md-offset-3
      %h1 Dodaj zdjęcie
      =form_for @slider_image, url: admin_slider_images_path, html: { class: 'form-horizontal' } do |f|
        -if @slider_image.errors.any? 
          %div id="error_explanation"
          %h2= pluralize(@slider_image.errors.count, "error") 
          Nie udało się dodać zdjęcia:
          %ul
            - @slider_image.errors.full_messages.each do |message| 
              %li= message 
        .form-group
          =f.label :photo, 'Zdjęcie', class: 'control-label col-sm-2'
          .col-sm-8
            = f.file_field :photo
        .form-group
          = f.label :title, 'Tytuł', class: 'control-label col-sm-2'
          .col-sm-8
            = f.text_field :title, class: 'form-control'
        .form-group
          = f.label :caption, 'Treść', class: 'control-label col-sm-2'
          .col-sm-8
            = f.text_field :caption, class: 'form-control'
        .form-group
          = f.label :link, 'Odnośnik', class: 'control-label col-sm-2'
          .col-sm-8
            = f.text_field :link, class: 'form-control'

        .col-md-2.col-md-offset-5  
          .actions= f.submit "Zapisz!", class: 'btn btn-default btn-primary'
