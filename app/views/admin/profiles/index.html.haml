.row
  .col-sm-6.col-sm-offset-1
    %h2 Twoi klienci
    %br/
.row
  .col-sm-10.col-sm-offset-1
    %table.table.table-hover
      %thead
        %tr
          %th Imię
          %th Nazwisko
          %th Numer telefonu
          %th Adres
          %th Miasto
          %th Akcje
      %tbody
        - @profiles.each do |profile|
          -unless profile.user == current_user
            %tr
              %td
                = profile.first_name
              %td
                = profile.last_name
              %td
                = profile.phone_no.to_s
              %td
                = profile.street_name
                = profile.house_no.to_s
                = profile.apartment_no.to_s
              %td
                = profile.zip_code
                = profile.city_name
              %td
                = link_to "Usuń", { action: "destroy", id: profile.id }, method: :delete, data: { confirm: 'Na pewno?' }, class: 'btn btn-warning'
                = link_to "Zobacz szczegóły", admin_profile_path(profile.id) , class: 'btn btn-primary'
    .row
      .col-sm-5
        .dataTables_info
          #{@profiles.count} klientów
