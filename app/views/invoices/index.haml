%html
  %head
    %meta{:charset => "utf-8"}
    %title Faktura
  %body
    %h1.header Faktura VAT
    %h3.invoice-number
      = 'nr '+@invoice_number+'/FV/'+@current_year
    
    %h3.status ORYGINAŁ
    
    %div.invoice-details-tbl
      %p.transaction-date
        = "Data sprzedaży: "+@transaction_date
      %p.invoicing-date
        = "Data wystawienia: "+@invoicing_date
      %p.invoicing-place Miejsce wystawienia: Łódź


    %div.seller-details-tbl
      %p.seller-label Sprzedawca:
      %p.seller-name Apple Pieróg
      %p.seller-param NIP: 000-000-00-00
      %p.seller-param
        Nazwaulicy 10/10
        %br>/
        90-210, Łódź
      %p.seller-param tel: 500-500-500
      %p.seller-param email: email@applepierog.com

    %div.buyer-details-tbl
      %p.buyer-label Nabywca:
      %p.buyer-name
        = @buyer_first_name + " " +@buyer_last_name
      %p.buyer-param
        = @buyer_street_name + " " + @buyer_house_no + @buyer_apartment_no
        %br>/
        = @buyer_zip_code + ", " + @buyer_city_name
      -# %p.buyer-param tel: 500-500-500
      %p.buyer-param
        = "email: " + @buyer_user_email